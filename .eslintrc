{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  // "globals": {
  //   "React": "readable"
  // },
  "rules": {
    // 这里填入你的项目需要的个性化配置，比如：
    //
    // // @fixable 一个缩进必须用两个空格替代
    "semi": ["error", "always"],
    "no-console": "off",
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "none",
        "caughtErrors": "none"
      }
    ],
    "max-nested-callbacks": "off",
    "typescript/member-ordering": "off",
    "typescript/member-delimiter-style": "off",
    "indent": [
      "off",
      2,
      {
        "SwitchCase": 1,
        "flatTernaryExpressions": true
      }
    ],
    // 新规则
    // "prettier/prettier": "error",
    "strict": "off",
    "import/no-dynamic-require": "off",
    "global-require": "off",
    "require-yield": "off"
  }
}
